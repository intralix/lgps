<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <report id="report_suscriptions_detail"
            model="sale.subscription"
            string="Suscription Details"
            name="lgps.report_suscriptions_detail_view"
            file="lgps.report_suscriptions_detail"
            report_type="qweb-pdf"
            paperformat="base.paperformat_batch_deposit"
    />

    <template id="report_suscriptions_detail_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">

                    <div class="page">
                        <br></br>
                        <br></br>
                        <hr></hr>
                        <div class="row">
                            <div class="col-12">
                                <h2 t-field="doc.gpsdevice_id.nick"/>
                            </div>
                        </div>
                        <br></br>
                        <t t-if="doc.gpsdevice_id">
                            <div class="row">
                                <div class="col-3">
                                    <strong>Econ√≥mico</strong>
                                    <p>
                                        <span t-field="doc.gpsdevice_id.nick"></span>
                                    </p>
                                </div>
                                <div class="col-3">
                                    <strong>Equipo</strong>
                                    <p>
                                        <span t-field="doc.gpsdevice_id.name"></span>
                                    </p>
                                </div>
                            </div>
                            <hr></hr>

                                <h3>Servicios Registrados</h3>
                                <t t-if="doc.recurring_invoice_line_ids">
                                    <table class="table table-striped table-condensed table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Servicio</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="doc.recurring_invoice_line_ids" t-as="line">
                                                <tr>
                                                    <td><span t-field="line.product_id.name"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </t>
                            </t>
                            <t t-if="not doc.gpsdevice_id">
                                 No hay registros
                             </t>
                        </div>
                    </t>
                
            </t>
    </template>
</odoo>
