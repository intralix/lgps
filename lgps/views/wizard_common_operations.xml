<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Split Record -->
  <record id="view_common_operations_device_wizard" model="ir.ui.view">
    <field name="name">lgps.common_operations_device_wizard.form</field>
    <field name="model">lgps.common_operations_device_wizard</field>
    <field name="arch" type="xml">
       <form string="Drop Process">
           <group>
               <field name="operation_mode"/>
           </group>
           <group attrs="{'invisible':[('operation_mode', '!=', 'drop')]}">
               <p class="text-primary"> Este procedimiento realizará la siguientes acciones:</p><br/>
               <p>1) Cambiará la plataforma del equipo a <strong>Baja</strong><br/>
                   2) Ingresar el comentario como una nota interna en cada equipo<br/>
                   3) Cambiar la suscripción del equipo a borrador<br/>
                   4) Se notificará para que se proceda con la baja de las líneas asociadas.<br/><br/>
               </p>
           </group>

           <group attrs="{'invisible':[('operation_mode', '!=', 'hibernation')]}">
               <p class="text-primary"> Este procedimiento realizará la siguientes acciones:</p><br/>
               <p>1) Dejará el equipo en estatus de <strong>Hibernado</strong><br/>
                   2) Ingresar el comentario como una nota interna en cada equipo<br/>
                   3) Cambiar la suscripción del equipo a borrador<br/>
                   4) Se notificará para realizar ajustes en la suscripción.<br/><br/>
               </p>
           </group>

           <hr/>
        <group>
             <field name="gpsdevice_ids" readonly="1" string="Equipo sustituido">
                <tree string="GPS Devices to Process">
                  <field name="name"/>
                  <field name="nick"/>
                  <field name="installation_date"/>
                  <field name="platform"/>
                  <field name="cellchip_id"/>
                  <field name="serialnumber_id"/>
                </tree>
            </field>
        </group>
           <group>
               <group>
                   <field name="requested_by" attrs="{'invisible':[('operation_mode', 'in', ['substitution','replacement'])], 'required':[('operation_mode', 'not in', ['substitution','replacement'])]}"/>
                   <field name="comment" string="Comentario / Falla Presentada"/>
               </group>
               <group>
                   <field name="destination_gpsdevice_ids" attrs="{'invisible':[('operation_mode', 'in', ['drop','hibernation'])], 'required':[('operation_mode', 'not in', ['drop','hibernation'])]}"/>
                   <field name="related_odt" attrs="{'invisible':[('operation_mode', 'in', ['drop','hibernation'])], 'required':[('operation_mode', 'not in', ['drop','hibernation'])]}"/>
               </group>

           </group>

        <footer>
          <button name="execute_operation" type="object" string="Execute Process" class="oe_highlight"/>
          or
          <button special="cancel" string="Cancel" type="object" class="btn-danger"/>
        </footer>
      </form>
    </field>
  </record>
    <act_window id="action_view_common_operations_device_wizard"
                name="Device Common Operations"
                src_model="lgps.gpsdevice"
                res_model="lgps.common_operations_device_wizard"
                view_mode="form"
                target="new"
                key2="client_action_multi"
    />
</odoo>
