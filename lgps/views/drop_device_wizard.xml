<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Split Record -->
  <record id="view_drop_device_wizard" model="ir.ui.view">
    <field name="name">lgps.drop_device_wizard.form</field>
    <field name="model">lgps.drop_device_wizard</field>
    <field name="arch" type="xml">
      <form string="Split Record">
        <group>
          <p class="text-muted">** Only Draft Record can be merged.
            <br/>** Select option 'Create New record' if you want to cancel all records and create new merged record.<br/>
            ** Select option 'Merge in Existing Record' if you want to merge all other records in that record.<br/>
            ** Records of Same Customer/Partner can be merged only.<br/>
            ** Lines with Same product, unit price and discount will be merged.<br/>
            ** Avoid merging system generated records.<br/>
          </p>
        </group>
        <group>
          <group>
            <field name="gpsdevice_ids" invisible="1"/>
            <field name="comment"/>
          </group>
        </group>
        <footer>
          <button name="execute_drop" type="object" string="Execute Process" class="oe_highlight"/>
          or
          <button special="cancel" string="Cancel" type="object"/>
        </footer>
      </form>
    </field>
  </record>
  <record id="action_view_drop_device_wizard" model="ir.actions.act_window">
    <field name="name">Device Drop Wizard</field>
    <field name="res_model">lgps.drop_device_wizard</field>
    <field name="src_model">lgps.gpsdevice</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_drop_device_wizard"/>
    <field name="target">new</field>
    <field name="key2">client_action_multi</field>
  </record>
</odoo>
