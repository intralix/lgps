<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Split Record -->
  <record id="view_drop_device_wizard" model="ir.ui.view">
    <field name="name">lgps.drop_device_wizard.form</field>
    <field name="model">lgps.drop_device_wizard</field>
    <field name="arch" type="xml">
       <form string="Drop Process">
        <group>
          <p class="text-primary"> Este procedimiento realizará la siguientes acciones:</p><br/>
          <p>1) Cambiará la plataforma del equipo a <strong>Baja</strong><br/>
              2) Ingresar el comentario como una nota interna en cada equipo<br/>
              3) Cambiar la suscripción del equipo a borrador<br/>
              4) Se notificará para que se proceda con la baja de las líneas asociadas.<br/><br/>

              Ingresa el motivo por el cual que estás dando de baja el(los) equipo(s).<br/>
          </p>
        </group>
        <group>
          <group>
             <field name="gpsdevice_ids">
                <tree string="GPS Devices to Process">
                  <field name="name"/>
                  <field name="nick"/>
                  <field name="installation_date"/>
                  <field name="platform"/>
                  <field name="cellchip_id"/>
                  <field name="serialnumber_id"/>
                </tree>
            </field>
            <field name="comment"/>
          </group>
        </group>
        <footer>
          <button name="execute_drop" type="object" string="Execute Process" class="oe_highlight"/>
          or
          <button special="cancel" string="Cancel" type="object"/>
        </footer>
      </form>
    </field>
  </record>
    <act_window id="action_view_drop_device_wizard"
                name="Device Drop Wizard"
                src_model="lgps.gpsdevice"
                res_model="lgps.drop_device_wizard"
                view_mode="form"
                target="new"
                key2="client_action_multi"
    />
</odoo>
