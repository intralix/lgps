<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="seq_lgps_user_margin_configuration" model="ir.sequence">
    <field name="name">User Margin Configuration Sequence</field>
    <field name="code">lgps.user_margin_configuration</field>
    <field name="prefix">UMCNF</field>
    <field name="padding">6</field>
    <field name="company_id" eval="False"/>
  </record>

  <record model="ir.ui.view" id="lgps_user_margin_configuration_form_view">
    <field name="name">user_margin_configuration.form</field>
    <field name="model">lgps.user_margin_configuration</field>
    <field name="arch" type="xml">
      <form string="User Margin Configuration Form">
        <sheet>
        <label for="name"/>
            <h1>
                <field name="name"/>
            </h1>
          <group>

            <group>
                <field name="res_user_id"/>
                <field name="create_date"/>
            </group>

            <group>
                <field name="min_margin"/>
                <field name="skip_min_margin_rule" widget="percentage"/>
            </group>
          </group>
        </sheet>

        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
          <field name="activity_ids" widget="mail_activity"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="lgps_user_margin_configuration_search_view">
    <field name="name">lgps_user_margin_configuration.search</field>
    <field name="model">lgps.user_margin_configuration</field>
    <field name="arch" type="xml">
      <search>
          <field name="name"/>
          <field name="res_user_id"/>
          <field name="min_margin"/>
          <field name="skip_min_margin_rule"/>
          <field name="create_date"/>
          <group expand="1" string="Group By">
              <filter string="Margin Rank" name="margin_group" context="{'group_by':'min_margin'}"/>
              <separator orientation="vertical" />
              <filter string="Created On" name="created_on_group" context="{'group_by':'create_date'}"/>
        </group>
      </search>
    </field>
  </record>

  <record model="ir.ui.view" id="lgps_user_margin_configuration_tree_view">
    <field name="name">lgps_user_margin_configuration.tree</field>
    <field name="model">lgps.user_margin_configuration</field>
    <field name="arch" type="xml">
      <tree string="failures Tree">
            <field name="name"/>
            <field name="res_user_id"/>
            <field name="min_margin"/>
            <field name="skip_min_margin_rule"/>
            <field name="create_date"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="lgps_user_margin_configuration_list_action">
    <field name="name">lgps_user_margin_configuration_action</field>
    <field name="res_model">lgps.user_margin_configuration</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">Create the first Client Configuration Record</p>
    </field>
  </record>

      <menuitem
            id="lgps_client_configuration_menu"
            name="User Margin Configurations"
            parent="user_margin_config_menu"
            action="lgps_user_margin_configuration_list_action"
    />
</odoo>
